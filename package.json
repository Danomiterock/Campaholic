    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "bootstrap": "^4.6.0",
    "connect-mongo": "^4.4.1",
    "connect-mongodb-session": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^9.0.0",
    "express": "^4.16.3",
    "express-session": "^1.17.1",
    "if-env": "^1.0.4",
    "moment": "^2.29.1",
    "mongoose": "^5.3.16",
    "react-bootstrap": "^1.5.2"
  }
